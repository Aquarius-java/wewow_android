<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context="com.wewow.ArticleActivity">

    <LinearLayout
        android:id="@+id/article_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/article_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:foregroundGravity="center"
                android:src="@drawable/back" />


            <ImageView
                android:id="@+id/article_share"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:src="@drawable/share" />

            <ImageView
                android:id="@+id/article_fav"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/lifelab_share"
                android:src="@drawable/favourite_b" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textColor="#333631"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/article_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY" />

            <WebView
                android:id="@+id/article_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e7a6cf"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:layout_marginTop="14dp"
                    android:gravity="center_horizontal"
                    android:text="@string/article_share_title"
                    android:textColor="#333631"
                    android:textSize="14sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp">

                    <TableRow>

                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/wechat" />

                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/weibo" />

                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/weibo" />
                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp">

                    <TableRow>

                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/wechat" />

                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/weibo" />

                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/weibo"
                            android:visibility="invisible" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#fcdeaf"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="16dp"
                    android:text="@string/article_hot_discuss"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_more_discuss"
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/arrowright" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_more_discuss"
                    android:paddingRight="8dp"
                    android:text="@string/article_more_discuss"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/article_discuss_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/article_feedback_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:gravity="center_horizontal"
                android:text="@string/article_feedback"
                android:textColor="#333631"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
