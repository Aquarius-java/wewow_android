<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lifepost_comment_likearea"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lifepost_comment_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/liked" />

        <TextView
            android:id="@+id/lifepost_comment_liked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lifepost_comment_like"
            android:textColor="#333631"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/lifepost_mycomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="@string/lifepost_mycomment"
            android:textColor="#69b076"
            android:textSize="11sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/lifepost_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:paddingBottom="14dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:textColor="#333631"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <TextView
            android:id="@+id/lifepost_comment_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#333631"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/more" />

    </RelativeLayout>

</LinearLayout>