<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/lifelab_item_discuz_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/text_gray_drak"
        android:textSize="16sp"/>

    <include layout="@layout/view_line"/>

    <LinearLayout
        android:id="@+id/lifelab_item_discuz_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="27dp"
        android:paddingLeft="24dp"
        android:paddingTop="27dp">

        <ImageView
            android:id="@+id/iv_lifelab_item_discuz"
            android:layout_width="96dp"
            android:layout_height="96dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingStart="18dp">

            <TextView
                android:id="@+id/tv_lifelab_item_discuz_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_drak"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_lifelab_item_discuz_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="12sp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>